<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="120dp"
        android:id="@+id/foundedMoviePoster"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/no_poster"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Movie Title"
        android:id="@+id/foundedMovieTitle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/foundedMoviePoster" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="year"
        android:id="@+id/foundedMovieYear"
        android:layout_below="@+id/foundedMovieTitle"
        android:layout_alignStart="@+id/foundedMovieTitle"
        android:layout_marginTop="10dp" />
</RelativeLayout>